
<article class="message">
    <div class="message-header">
      <div>
        <strong>From :</strong><%= message.sender.name.titleize %>
      </div>
      <div>
        <strong>To :</strong><%= message.recipient.name.titleize %>
      </div>
        <button class="delete" aria-label="delete"></button>
    </div>

    <div class="message-body">
      <strong>Message</strong>
      <p><%= message.body %></p>
    </div>
  </article>







