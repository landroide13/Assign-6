<!DOCTYPE html>
<html>
  <head>
    <title>FakeBook</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar><!DOCTYPE html">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item" href="/">
            <%= image_tag "", alt: "FakeBook" %>
          </a>
          <div class="navbar-item">
            <div class="field">
              <div class="control has-icons-right">
                <input class="input" type="text" placeholder="Search users">
              </div>
            </div>
          </div>

          <div class="navbar-burger burger" data-target="navMenu">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
        <div class="navbar-menu" id="navMenu">
          <div class="navbar-start">
          </div>
          <div class="navbar-end">
            <% if current_user %>
              <%= link_to profile_path, class: "navbar-item" do %>
                <%= image_tag current_user.image_default %>
                &nbsp;<%= current_user.name %>
              <% end %>

              <div class="navbar-item has-dropdown is-hoverable">
                <a href="/" class="navbar-link">
                 
                </a>

                <div class="navbar-dropdown">
                  <%= link_to "My Friends", friends_path, class: "navbar-item" %>
                  <%= link_to "Friended By", friends_path, class: "navbar-item" %>
                </div>
              </div>

              
            <% else %>
              <%= link_to "Sign Up", new_user_path, class: "navbar-item" %>
              <%= link_to "Log In", login_path, class: "navbar-item" %>
            <% end %>
          </div>
        </div>
      </nav>
    </div>

  <div class="container" style="margin-top:20px ">
      <% if content_for?(:content) %>
          <%= yield(:content) %>
        <% else %>
          <%= yield%>
      <%end %>  
    </div>  
    
  </body>
</html>
