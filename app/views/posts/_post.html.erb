
<div class="post card" id="<%= dom_id post %>">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <p class="image is-32x32">
            <img src="https://coderschool123.s3-ap-southeast-1.amazonaws.com/uploads/twitter-square.jpeg" alt="">
          </p>
        </div>
        <div class="media-content">
          <p class="is-title">
            <strong><%= link_to post.poster.email, "/" %></strong>
          </p>
          <small><%= time_ago_in_words post.updated_at %> ago</small>
        </div>
      </div>
      <div class="content">
        <%= simple_format post.body %>
      </div>
    </div>
    <div class="card-footer">
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <%= link_to fa_icon("thumbs-up", text: "Like"), toggle_like_path(post_id: post.id), class: "js-like-button button is-white #{'is-liked' if current_user.liking?(post)}", method: "post", remote: true %>
             <%= post.likes.map {|e| e.user.email }.to_sentence %>
          </div>
          <div class="level-item">
            <%= link_to fa_icon("comments", text: "Comment"), "/", class: "button is-white" %> 
          </div>
        </div>
      </div>
    </div>
  </div>



