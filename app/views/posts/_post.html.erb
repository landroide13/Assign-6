
<div class="post card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <p class="image is-32x32">
            <img src="https://coderschool123.s3-ap-southeast-1.amazonaws.com/uploads/twitter-square.jpeg" alt="Twitter square">
          </p>
        </div>
        <div class="media-content">
          <p class="is-title">
            <strong><%= link_to post.poster.email, "/" %></strong>
          </p>
          <small><%= time_ago_in_words post.updated_at %> ago</small>
        </div>
      </div>
      <div class="content">
        <%= simple_format post.body %>
      </div>
    </div>
    <div class="card-footer">
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <%= link_to fa_icon("thumbs-up", text: "Like"), toggle_like_path(post_id: post.id), class: "button is-white", method: "post" %>
          </div>
          <div class="level-item">
            <%= link_to fa_icon("comments", text: "Comment"), "/changeme", class: "button is-white" %>
          </div>
        </div>
        <%= post.likes.map {|e| e.user.email }.to_sentence %>
      </div>
    </div>
  </div>








<h1 class="title">Posts</h1>
<%= render Post.all %>


