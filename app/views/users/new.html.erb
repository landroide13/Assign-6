<h1>Create New User</h1>

<div class="columns">
<div class="column">

<ul class="error">
  <% if @user.errors.present? %>
    <%@user.errors.full_message.each do |error|%>
     <li><%= error%></li>
    <% end %>
</ul>

<% form_for @user do |f| %>

  <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <%= f.text_field :name , class:"input control", placeholder:"name"%>
    </div>
  </div>

  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <%= f.text_field :email , class:"input control", placeholder:"email"%>
    </div>
  </div>
    
  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <%= f.text_field :password , class:"input control", placeholder:"password"%>
    </div>
  </div>

  <div class="field">
    <label class="label">Password Confirmation</label>
    <div class="control">
      <%= f.text_field :password_confirmation , class:"input control", placeholder:"confirmation password"%>
    </div>
  </div>


  <div class="field is-grouped">
      <div class="control">
        <%= f.submit 'Create account' , class:"button is-primary" %>
      </div>
  </div>    
<% end %>
 
<%= render  "form" , user: @user  %>

</div>
</div>





