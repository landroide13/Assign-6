
<div class="content"><h1 class="title "><%= current_user.name.titleize %>'s profile </h1></div>
<div class="columns is-centered">
  <div class="column is-one-third">
    <div class="card user-card">
      <div class="card-content">
        <%= form_for @user do |f| %>
          <div class="field">
            <div class="label">Name</div>
            <div class="control">
              <%= f.text_field :name, class: 'input' %>
            </div>
          </div>
          <div class="field">
            <div class="label">Email</div>
            <div class="control">
              <%= f.text_field :email, class: 'input' %>
            </div>
          </div>
          <div class="field">
            <div class="label">Passworrd</div>
            <div class="control">
              <%= f.password_field :password, class: 'input' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :Url, class:"label"%>
            <div class="control"><%= f.file_field :avatar, class: 'input' %>
            </div>
          </div>
          
          <div class="field">
            <div class="control">
              <%= image_tag current_user.image_default %>
            </div>
          </div>
          
          <%= f.submit "Update Profile", class: "button is-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>















