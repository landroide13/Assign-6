
<div class="columns">
  <div class="column is-half is-offset-one-quarter card">
    <%= form_for user do |f| %>
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <%= f.text_field :name , class:"input control", placeholder:"name"%>
        </div>
      </div>

      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <%= f.text_field :email , class:"input control", placeholder:"email"%>
        </div>
      </div>
        
      <div class="field">
        <label class="label">Password</label>
        <div class="control">
          <%= f.password_field :password , class:"input control", placeholder:"password"%>
        </div>
      </div>

      <div class="field">
        <label class="label">Pasword Confirmation</label>
        <div class="control">
          <%= f.password_field :password_confirmation , class:"input control", placeholder:"confirmation password"%>
        </div>
      </div>

      <div class="field">
        <%= f.label :avatar, class:"label"%>
        <div class="control"><%= f.file_field :avatar, class: 'input' %>
        </div>
      </div>
          
      <div class="field">
        <div class="control">
          <%= image_tag current_user.image_default %>
        </div>
      </div>


      <div class="field is-grouped">
          <div class="control">
            <%= f.submit 'Create account' , class:"button is-primary" %>
          </div>
      </div>

    <% end %>
  </div>
</div>


